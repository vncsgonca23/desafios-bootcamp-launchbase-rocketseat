{%extends "layout.njk"%}
{%block head%}
  <link rel="stylesheet" href="/css/home.css"/>
  {%endblock%}
  {%block content%}
    <section class="presentation">
      <div class="presentation-content">
        <h1>As melhores receitas</h1>
        <p>
          Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.
        </p>
      </div>
      <div class="presentation-image">
        <img src="/assets/chef.png" alt="Chef"/>
      </div>
    </section>
    <div class="title-section-cards">
      <h1>Mais acessadas</h1>
    </div>
    <section class="cards" id="{{item.id}}">
      {%for item in items%}
        <div class="card">
          <div class="card__image-container">
            <img src="{{item.image}}" alt="Imagem de {{item.title}}"/>
          </div>
          <div class="card__content-title">
            <p>{{item.title}}</p>
          </div>
          <div class="card__content-author">
            <p>{{item.author}}</p>
          </div>
        </div>
        {%endfor%}
      </section>
      <div class="modal-overlay">
        <div class="modal">
          <div class="modal-content">
            <div class="modal-content-image"><img src="" alt=""/></div>
            <div class="modal-content-title">
              <p></p>
            </div>
            <div class="modal-content-author">
              <p></p>
            </div>
            <div class="modal-content-close">
              <p>Fechar modal</p>
            </div>
          </div>
        </div>
      </div>
      {%block script%}
        <script src="/js/modal.js"></script>
        {%endblock%}
        {%endblock%}