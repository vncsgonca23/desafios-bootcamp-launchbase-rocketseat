{%block head%}
  <link rel="stylesheet" href="../css/revenue.css"/>
  {%endblock%}
  {%block content%}
    <div class="container">
      <section class="cards">
        {%for item in items%}
          <div class="card" id="{{item.id}}">
            <div class="card__image-container">
              <img src="{{item.image}}" alt="Imagem de {{item.title}}"/>
            </div>
            <div class="card__content-title">
              <p>{{item.title}}</p>
            </div>
            <div class="card__content-author">
              <p>{{item.author}}</p>
            </div>
          </div>
          {%endfor%}
